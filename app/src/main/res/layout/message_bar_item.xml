<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/linerlayout_water_selector"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="12dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小明"
        android:textSize="18dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/profile_photo"
        app:layout_constraintEnd_toStartOf="@+id/received_time"
        app:layout_constraintLeft_toRightOf="@+id/profile_photo"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintTop_toTopOf="@+id/profile_photo"
        app:layout_constraintBottom_toBottomOf="@+id/profile_photo"
        />

    <TextView
        android:id="@+id/message_outline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小明给你发来了一条消息"
        android:textSize="10dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintStart_toEndOf="@+id/profile_photo"
        app:layout_constraintEnd_toStartOf="@+id/received_time"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="@+id/profile_photo"
        app:layout_constraintBottom_toBottomOf="@id/profile_photo"
        app:layout_constraintVertical_bias="0.9"
        />

    <TextView
        android:id="@+id/received_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="19:18"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/message_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/shape_round_textview"
        android:text="1"
        app:layout_constraintVertical_bias="0.9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/received_time"
        app:layout_constraintEnd_toEndOf="@+id/received_time"
        app:layout_constraintRight_toRightOf="parent"/>






</androidx.constraintlayout.widget.ConstraintLayout>